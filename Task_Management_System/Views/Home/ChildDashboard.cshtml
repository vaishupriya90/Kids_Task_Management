@model Task_Management_System.ViewModel.ChildDetailViewModel


<div class="row">
    <div class="col-sm-6"><h4>Hello @Model.FirstName!</h4></div>
</div>

<br />

@if (Model.Tasks.Count == 0)
{
    <p>No Tasks added for @Model.FirstName yet!</p>
}
else
{
    <div class="row">
        <div class="col-sm-6">
            <br/>
            <h6>Assigned Tasks:</h6>
            <br/>
            <table class="table">
                <tr>
                    <th>Task Name</th>
                    <th>Description</th>
                    <th>Points</th>
                </tr>
                @foreach (Task_Management_System.Models.Task task in Model.Tasks)
                {
                    <tr>
                        <td><a asp-controller="Task" asp-action="Detail" asp-route-id="@task.Id">@task.Name</a> </td>
                        <td>@task.Description.</td>
                        <td>@task.Point</td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-sm-6">
            <div style="background-image:url('../images/schedule.jpg'); min-height: 1500px; background-repeat:no-repeat">
            </div>
        </div>
    </div>

}

