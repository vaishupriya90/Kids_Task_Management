@model Task_Management_System.Models.User
@{
    ViewData["Role"] = "parent";
}
<h1>Edit Child Details</h1>

<form method="post" asp-controller="Child" asp-action="Edit">
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" value="@Model.FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" value="@Model.LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age">Child Age</label>
        <input asp-for="Age" value="@Model.Age" />
        <span asp-validation-for="Age"></span>
    </div>

    <div class="form-group">
        <select asp-for="Gender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>
    <input type="submit" value="Submit" />
</form>