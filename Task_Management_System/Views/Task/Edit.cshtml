@model Task_Management_System.Models.Task;
<br />

<div class="row">
    <div class="col-sm-12">
        <h4>Edit Task Details</h4>
    </div>
</div>
<br />

<form asp-controller="Task" asp-action="Edit" method="post">
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Name" class="col-form-label">Task Name</label>
        </div>
        <div class="col-sm-2">
            <input asp-for="Name" class="form-control" value="@Model.Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="col-sm-8"></div>
    </div>

    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Description" class="col-form-label">Description</label>
        </div>
        <div class="col-sm-2">
            <input asp-for="Description" class="form-control" value="@Model.Description"/>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="col-sm-8"></div>
    </div>

    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="Point" class="col-form-label">Points</label>
        </div>
        <div class="col-sm-2">
            <input asp-for="Point" class="form-control" value="@Model.Point"/>
            <span asp-validation-for="Point"></span>
        </div>
        <div class="col-sm-8"></div>
    </div>

    <div class="col-sm-10"></div>
   
    <br />
    <div class="row form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-2">
            <input type="submit" value="Edit Task" class="btn btn-info" />
        </div>
        <div class="col-sm-8"></div>
    </div>

</form>